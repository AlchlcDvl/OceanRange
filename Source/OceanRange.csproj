<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <AssemblyName>OceanRange</AssemblyName>
        <RootNamespace>TheOceanRange</RootNamespace>
        <TargetFramework>net4.8</TargetFramework>
        <Version>0.0.1</Version>
        <DebugType>none</DebugType>
        <DebugSymbols>true</DebugSymbols>
        <LangVersion>preview</LangVersion>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <Authors>TheRanchExchange</Authors>
        <RestorePackagesWithLockFile>true</RestorePackagesWithLockFile>
        <EnableDynamicLoading>true</EnableDynamicLoading>
        <PackageLicenseExpression>GPL-3.0-or-later</PackageLicenseExpression>
        <Description>Dive into the slime sea!</Description>
        <EnableNETAnalyzers>true</EnableNETAnalyzers>
        <Configurations>Debug;Release</Configurations>
        <ImplicitUsings>true</ImplicitUsings>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Roslynator.Analyzers" Version="4.12.11" PrivateAssets="all" />
        <PackageReference Include="Roslynator.CodeAnalysis.Analyzers" Version="4.12.11" PrivateAssets="all" />
        <PackageReference Include="Roslynator.Formatting.Analyzers" Version="4.12.11" PrivateAssets="all" />
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.14.0" PrivateAssets="all" />

        <EmbeddedResource Include="Resources\*" />
        <EmbeddedResource Include="Resources\*\*" />
    </ItemGroup>

    <Target Name="Copy" AfterTargets="Build" > <!-- This will create new directories if you don't have a test copy of modded SR -->
        <Copy SourceFiles="$(TargetPath)" DestinationFolder="$(MSBuildThisFileDirectory)/Test/SRML/Mods/" />
    </Target>

    <PropertyGroup Condition="$(Configuration)==Release">
        <Optimize>true</Optimize>
    </PropertyGroup>

    <Import Project="../SlimeRancher.props" /> <!-- This will error if there's no SLimeRancher.props file, delete this line if you don't use it -->
</Project>